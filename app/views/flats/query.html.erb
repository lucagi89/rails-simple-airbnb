<div class = "row">
  <div class="col-12">
    <h1>Your "<%= @query %>" flats here</h1>
  </div>
</div>

<div class = "row">
      <% @flats.each do |flat| %>
        <div class="col-md-3 p-3 shadow bg-light">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.img_url %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="d-flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="d-flex align-items-center ms-3">
                <i class="fa-solid fa-sterling-sign"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions mt-3">
            <%= link_to "More Info", flat_path(flat), class:"btn btn-outline-primary" %>
            <%= link_to "Edit", edit_flat_path(flat), class:"ms-3 btn btn-outline-warning" %>
            <%= link_to "Remove", flat_path(flat), data: { turbo_method:"delete", turbo_confirm: "Are you sure?"},  class:"ms-3 btn btn-outline-danger" %>
          </div>
        </div>
      </div>
      <% end %>
  </div>

</div>
